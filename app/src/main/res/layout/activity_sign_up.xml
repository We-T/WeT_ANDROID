<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.SignUpActivity">

    <ImageView
        android:id="@+id/act_signup_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_back_black"
        android:onClick="onClick"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.4"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/act_signup_img_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_btn_choose_profile_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        
        <EditText
            android:id="@+id/act_signup_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:background="@color/very_light_pink"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            android:hint="이름"
            android:fontFamily="@font/kopubworld_dotum_medium"
            android:textSize="15sp"
            android:textColor="@color/charcoal_grey"
            app:layout_constraintTop_toBottomOf="@+id/act_signup_img_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/act_signup_edit_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/very_light_pink"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            android:hint="아이디"
            android:fontFamily="@font/kopubworld_dotum_medium"
            android:textSize="15sp"
            android:textColor="@color/charcoal_grey"
            app:layout_constraintTop_toBottomOf="@+id/act_signup_edit_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/act_signup_edit_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/very_light_pink"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            android:hint="비밀번호"
            android:fontFamily="@font/kopubworld_dotum_medium"
            android:textSize="15sp"
            android:textColor="@color/charcoal_grey"
            app:layout_constraintTop_toBottomOf="@+id/act_signup_edit_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/act_signup_edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/very_light_pink"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            android:hint="폰 번호"
            android:fontFamily="@font/kopubworld_dotum_medium"
            android:textSize="15sp"
            android:textColor="@color/charcoal_grey"
            app:layout_constraintTop_toBottomOf="@+id/act_signup_edit_pwd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/act_signup_btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:background="@drawable/background_gradient_round_all_btn_45"
            android:fontFamily="@font/kopubworld_dotum_medium"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:lineSpacingExtra="9sp"
            android:text="다음 단계"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:onClick="onClick"
            app:layout_constraintTop_toBottomOf="@id/act_signup_edit_phone"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>