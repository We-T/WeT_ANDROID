<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.myPage.MyPageActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/act_mypage_const_top"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_home_three_circle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/act_mypage_btn_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/ic_close"
                    android:onClick="onClick"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:id="@+id/act_mypage_img_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:src="@drawable/dasole"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/act_mypage_text_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/kopubworld_dotum_medium"
                    android:lineSpacingExtra="15sp"
                    android:text="변다솔님"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/act_mypage_img_profile" />

                <TextView
                    android:id="@+id/act_mypage_text_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/kopubworld_dotum_medium"
                    android:lineSpacingExtra="25sp"
                    android:text="자녀모드"
                    android:textColor="@color/very_light_pink"
                    android:textSize="13sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/act_mypage_text_userName" />

                <TextView
                    android:id="@+id/act_mypage_btn_changeMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_box_stroke_white_radius_16"
                    android:fontFamily="@font/kopubworld_dotum_bold"
                    android:lineSpacingExtra="17sp"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="5dp"
                    android:text="모드 변경"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/act_mypage_text_mode" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/round_box_white_radius_10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/act_mypage_btn_changeMode">

                    <TextView
                        android:id="@+id/act_mypage_btn_myLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="18dp"
                        android:fontFamily="@font/kopubworld_dotum_bold"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="8sp"
                        android:text="나의 좋아요"
                        android:textColor="#4b4b4b"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/act_mypage_bar1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/act_mypage_bar1"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:layout_marginVertical="10dp"
                        android:background="@color/very_light_pink"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/act_mypage_btn_parentsLike"
                        app:layout_constraintStart_toEndOf="@id/act_mypage_btn_myLike"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/act_mypage_btn_parentsLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kopubworld_dotum_bold"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="8sp"
                        android:text="부모님 좋아요"
                        android:textColor="#4b4b4b"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/act_mypage_bar2"
                        app:layout_constraintStart_toEndOf="@id/act_mypage_bar1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/act_mypage_bar2"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:layout_marginVertical="10dp"
                        android:background="@color/very_light_pink"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/act_mypage_btn_myTrip"
                        app:layout_constraintStart_toEndOf="@id/act_mypage_btn_parentsLike"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/act_mypage_btn_myTrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kopubworld_dotum_bold"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="12sp"
                        android:text="여행 기록"
                        android:textColor="#4b4b4b"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/act_mypage_bar2"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/round_box_white_radius_10"
                android:paddingVertical="20dp"
                android:paddingHorizontal="20dp"
                android:elevation="3dp"
                app:layout_constraintTop_toBottomOf="@id/act_mypage_const_top"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/act_mypage_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kopubworld_dotum_bold"
                    android:textSize="17sp"
                    android:textColor="@color/charcoal_grey"
                    android:lineSpacingExtra="23sp"
                    android:text="우리가족"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/kopubworld_dotum_bold"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/warm_grey"
                    android:lineSpacingExtra="25sp"
                    android:text="0"
                    app:layout_constraintStart_toEndOf="@id/act_mypage_text1"
                    app:layout_constraintTop_toTopOf="@id/act_mypage_text1"
                    app:layout_constraintBottom_toBottomOf="@id/act_mypage_text1"/>

                <TextView
                    android:id="@+id/act_mypage_btn_addParents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_gradient_round_all_btn_15"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="18dp"
                    android:fontFamily="@font/kopubworld_dotum_bold"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="17sp"
                    android:text="가족 추가"
                    android:onClick="onClick"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/act_mypage_text_emptyFamily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="50dp"
                    android:fontFamily="@font/kopubworld_dotum_medium"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textColor="@color/warm_grey"
                    android:lineSpacingExtra="25sp"
                    android:text="가족을 추가하고 여행을 개설해 보세요"
                    app:layout_constraintTop_toBottomOf="@id/act_mypage_text1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/act_mypage_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:overScrollMode="never"
                    app:layout_constraintTop_toBottomOf="@id/act_mypage_text1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>