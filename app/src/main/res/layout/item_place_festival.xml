<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp">

    <ImageView
        android:id="@+id/item_place_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_fes1"
        android:background="@drawable/round_box_white_radius_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_place_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="17dp"
        android:paddingVertical="7dp"
        android:paddingHorizontal="15dp"
        android:fontFamily="@font/kopubworld_dotum_bold"
        android:text="태백 해바라기 축제"
        android:background="@drawable/round_box_warm_grey_radius_22"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:lineSpacingExtra="26sp"
        app:layout_constraintEnd_toEndOf="@+id/item_place_img"
        app:layout_constraintTop_toTopOf="@+id/item_place_img" />

</androidx.constraintlayout.widget.ConstraintLayout>