<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginBottom="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_add_schedule_ver_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/img_place_info_ex1"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_add_schedule_ver_text_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:fontFamily="@font/kopubworld_dotum_bold"
        android:lineSpacingExtra="23sp"
        android:text="휴애리자연생활공원"
        android:textColor="@color/charcoal_grey"
        android:textSize="17sp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/item_add_schedule_ver_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_add_schedule_ver_text_address"/>

    <TextView
        android:id="@+id/item_add_schedule_ver_text_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/kopubworld_dotum_medium"
        android:lineSpacingExtra="28sp"
        android:text="제주특별자치도 서귀포시"
        android:textColor="@color/warm_grey"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_add_schedule_ver_image"
        app:layout_constraintStart_toStartOf="@+id/item_add_schedule_ver_text_location"
        app:layout_constraintTop_toBottomOf="@+id/item_add_schedule_ver_text_location" />

    <TextView
        android:id="@+id/item_add_schedule_hor_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="18dp"
        android:paddingVertical="2dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/kopubworld_dotum_medium"
        android:textSize="12sp"
        android:textColor="@drawable/selector_category_textcolor"
        android:background="@drawable/selector_add_schedule_btn_background"
        android:lineSpacingExtra="7sp"
        android:gravity="center_horizontal"
        android:text="선택"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/item_add_schedule_ver_text_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/kopubworld_dotum_bold"
        android:lineSpacingExtra="28sp"
        android:text="관광지"
        android:textColor="#082542"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_add_schedule_ver_text_address"
        app:layout_constraintStart_toEndOf="@+id/item_add_schedule_ver_text_address"
        app:layout_constraintTop_toTopOf="@+id/item_add_schedule_ver_text_address" />

</androidx.constraintlayout.widget.ConstraintLayout>