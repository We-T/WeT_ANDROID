<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.makeTour.MakeTourActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_gradient_round_left_bottom_40"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="40dp"
                android:paddingTop="55dp"
                android:paddingEnd="23dp"
                android:paddingBottom="30dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/kopubworld_dotum_medium"
                    android:gravity="left"
                    android:lineSpacingExtra="13sp"
                    android:text="부모님 여행 개설"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/act_make_tour_btn_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:src="@drawable/ic_close" />
                </LinearLayout>

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="25dp"
                android:elevation="3dp"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kopubworld_dotum_bold"
                        android:lineSpacingExtra="9sp"
                        android:textColor="@color/brownish_grey"
                        android:textSize="17sp"
                        android:text="여행 이름" />

                    <EditText
                        android:id="@+id/act_make_tour_edit_tourName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_box_very_light_pink_radius_13"
                        android:fontFamily="@font/kopubworld_dotum_medium"
                        android:hint="부모님을 위한 특별한 여행 이름을 정해주세요!"
                        android:lineSpacingExtra="8sp"
                        android:maxLines="1"
                        android:onClick="onClick"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="8dp"
                        android:textColor="@color/brownish_grey"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="25dp"
                android:elevation="3dp"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kopubworld_dotum_bold"
                        android:lineSpacingExtra="9sp"
                        android:textColor="@color/brownish_grey"
                        android:textSize="17sp"
                        android:text="여행 날짜" />

                    <EditText
                        android:id="@+id/act_make_tour_edit_tourDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_box_very_light_pink_radius_13"
                        android:fontFamily="@font/kopubworld_dotum_medium"
                        android:hint="부모님이 언제 여행을 떠나실 계획인가요?"
                        android:lineSpacingExtra="8sp"
                        android:onClick="onClick"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="8dp"
                        android:textColor="@color/brownish_grey"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="25dp"
                android:elevation="3dp"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kopubworld_dotum_bold"
                        android:lineSpacingExtra="9sp"
                        android:textColor="@color/brownish_grey"
                        android:textSize="17sp"
                        android:text="여행 장소" />

                    <TextView
                        android:id="@+id/act_make_tour_btn_tourLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_box_very_light_pink_radius_13"
                        android:fontFamily="@font/kopubworld_dotum_medium"
                        android:hint="부모님이 어디로 여행을 떠나실 계획인가요?"
                        android:lineSpacingExtra="8sp"
                        android:onClick="onClick"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="8dp"
                        android:textColor="@color/brownish_grey"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="25dp"
                android:elevation="3dp"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kopubworld_dotum_bold"
                        android:lineSpacingExtra="9sp"
                        android:textColor="@color/brownish_grey"
                        android:textSize="17sp"
                        android:text="가족 초대" />

                    <TextView
                        android:id="@+id/act_make_tour_btn_inviteFamily"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_box_very_light_pink_radius_13"
                        android:fontFamily="@font/kopubworld_dotum_medium"
                        android:hint="여행 계획을 전송할 가족을 초대해주세요"
                        android:lineSpacingExtra="8sp"
                        android:onClick="onClick"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="8dp"
                        android:textColor="@color/brownish_grey"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/act_make_tour_btn_makeTour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="60dp"
                android:background="@drawable/background_gradient_round_all_btn"
                android:fontFamily="@font/kopubworld_dotum_medium"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="8sp"
                android:onClick="onClick"
                android:paddingVertical="12dp"
                android:text="여행 개설하기"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>