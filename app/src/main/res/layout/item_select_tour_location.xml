<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="22dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_select_tour_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_select_tour_placeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/kopubworld_dotum_medium"
        android:lineSpacingExtra="26sp"
        app:layout_constraintVertical_chainStyle="packed"
        android:text="강원"
        android:textColor="@color/charcoal_grey"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/item_select_tour_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_select_tour_placeSub"/>

    <TextView
        android:id="@+id/item_select_tour_placeSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        android:fontFamily="@font/kopubworld_dotum_medium"
        android:lineSpacingExtra="30sp"
        android:text="강릉·동해·속초·양양·춘천·평창·홍천"
        android:textColor="@color/warm_grey"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_select_tour_placeName"
        app:layout_constraintTop_toBottomOf="@+id/item_select_tour_placeName" />

    <TextView
        android:id="@+id/item_select_tour_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gradient_round_all_btn_6"
        android:text="여행 선택"
        android:paddingVertical="3dp"
        android:paddingHorizontal="12dp"
        android:fontFamily="@font/kopubworld_dotum_medium"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:lineSpacingExtra="7sp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>